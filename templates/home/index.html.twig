{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<main class="container-fluid">
		<section class="container">
			<h1 class="text-center mb-4 fw-semibold fs-2">Nos Voitures</h1>

			<form method="GET" action="{{ path('home_search') }}">
				<div class="row mb-3">
					<div class="col input-group">
						<label for="recherche-debut" class="input-group-text" required>Debut</label>
						<input type="datetime-local" name="recherche-debut" id="recherche-debut" class="form-control">
					</div>
					<div class="col input-group">
						<label for="recherche-fin" class="input-group-text" required>Fin</label>
						<input type="datetime-local" name="recherche-fin" id="recherche-fin" class="form-control">
					</div>
				</div>
				<div class="d-flex mb-4">
					<button type="submit" class="btn btn-outline-primary btn-sm ms-auto mx-3">Rechercher</button>
				</div>
			</form>
			
			{% for vehicule in vehicules %}
			<article class="row">
				<figure class="col-6">
				{% if vehicule.photo %}
					<img src="/upload{{ asset(vehicule.photo) }}" alt="Photo de la voiture" class="img-fluid">
				{% endif %}
				</figure>
				<div class="col-6">
					<h2>{{ vehicule.titre }}</h2>
					<div class="lh-sm p-2">
						<p class="text-nowrap h5 text-center" style="text-overflow: ellipsis; overflow: hidden;" title="{{ vehicule.marque ~ ' - ' ~ vehicule.modele }}">{{ vehicule.marque ~ ' - ' ~ vehicule.modele }}</p>
						<p>{{ vehicule.description }}</p>
						<div class="d-flex">
							<p class="ms-auto">{{ vehicule.prixJournalier|deviseFr }}</p>
						</div>
					</div>
					<div class="d-flex">
						<a href="{{ path('commande_user_new', {'id': vehicule.id }) }}" class="btn btn-outline-primary btn-sm ms-auto mx-3">RÃ©server</a>
					</div>
				</div>
				<hr>
			</article>
			{% endfor %}
		</section>
	</main>
{% endblock %}
